<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shopping"
        tools:ignore="ExtraText">
        <activity
            android:name="ui.adapter.CartAdapter"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name="ui.adapter.ProductAdapter"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name="ui.fragment.StoreMapFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name="ui.fragment.RevenueFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name="ui.fragment.CartFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name="ui.fragment.ProductListFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name="ui.MainFragmentActivity"
            android:exported="false"
            tools:ignore="MissingClass" />
        <activity
            android:name="ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ui.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="data.DatabaseHelper"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name="ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyXXXX-FAKE-KEY"/>
    </application>

</manifest>