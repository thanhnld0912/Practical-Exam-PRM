<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme -->
    <style name="Theme.Shopping" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Màu chính dùng cho Toolbar & BottomNav -->
        <item name="colorPrimary">@color/nav_dark</item>
        <item name="colorPrimaryContainer">@color/nav_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Màu nền chung -->
        <item name="android:colorBackground">@android:color/white</item>

        <!-- Màu chữ chung -->
        <item name="android:textColor">@android:color/black</item>

        <!-- Đảm bảo Navigation & Status bar không mờ -->
        <item name="android:statusBarColor">@color/nav_dark</item>
        <item name="android:navigationBarColor">@color/nav_dark</item>
    </style>

</resources>
